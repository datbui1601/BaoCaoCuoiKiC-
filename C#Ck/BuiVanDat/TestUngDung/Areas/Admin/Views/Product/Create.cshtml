@model ModelEF.Model.Product

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Thêm mới  sản phẩm
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Thêm Sản phẩm</h3></div>
                <div class="card-body">
                    <div class="col-lg-6">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                Tên sản phẩm
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Đơn giá
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.UnitCost, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.UnitCost, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Số lượng
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Hình ảnh
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", id = "txtImage" } })
                                    <button id=" btnSelectImage">Chọn ảnh</button>
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Miêu tả
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                Trạng Thái
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProductType, "ProductType", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.ProductType,null,new { AllowHtmlAttribute = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ProductType, "", new { @class = "text-danger" })
                                </div>
                            </div>



                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button class="btn-default"><input type="submit" value="Thêm mới" class="btn btn-default" /></button>
                                    </div>
                                </div>

                                }

                                <div>
                                    @Html.ActionLink("Back to List", "Index")
                                </div>
                            </div>
                        </div>
            </div>
        </div>
    </div>
</div>
